<Window x:Class="WpfDemoApp.Brushes.ButtonBrush"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Brushes"
        mc:Ignorable="d"
        Title="ButtonBrush" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="this is the First Button" Height="45" Background="{StaticResource LinearBrush1}"/>
        <Button Grid.Row="1" Content="this is the First Button" Height="45" Background="{StaticResource RadialBrush1}"/>
        <Button Grid.Row="2" Content="this is the First Button" Height="45" />
    </Grid>
</Window>
